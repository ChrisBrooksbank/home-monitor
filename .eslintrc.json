{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "prefer-const": "warn",
    "no-var": "error"
  },
  "globals": {
    "Logger": "readonly",
    "HUE_CONFIG": "readonly",
    "WEATHER_CONFIG": "readonly",
    "APP_CONFIG": "readonly",
    "HOUSE_CONFIG": "readonly"
  }
}
